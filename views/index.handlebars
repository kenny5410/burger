<!--Main Image and Title Card-->
<div class="container mt-3 mx-auto">
    <div class="row">
        <div class="col text-center">
            <div class="card mx-auto" style="width: 20rem">
            <img src="/assets/img/burger.jpeg" class="card-img-top" alt="burger">
            <div class="card-body">
                <h1 class="card-text">Eat-Da Burger!</h1>
            </div>
            </div>
        </div>
    </div>
</div>

<!--Ordered list of devour and non-devored list-->
<div class="container mt-3">
    <div class="row">
        <div class="col">
            <ol>
                {{#each burgers}}
                    {{#unless devoured}}
                        {{> burgers/burger-block devoured=true}}
                    {{/unless}}
                {{/each}}
            </ol>
        </div>
        <div class="col">
            <ol> 
                {{#each burgers}}
                    {{#if devoured}}
                        {{> burgers/burger-block devoured=false}}
                    {{/if}}
                {{/each}}
            </ol>            
        </div>
    </div>
</div>

<!--Submit button to add a new burger to the list-->
<div class="container">
    <div class="row">
        <div class="col-12">
            <form class="create-form text-center">
                <div class="form-group">
                    <input type="text" id="burg" name="name">
                </div>
                <button class="btn btn-primary" type="submit">Submit</button>
                <p class="mt-3">Enter a burger you want to eat and Click the "Submit" button</p>
            </form>           
        </div>
    </div>
</div>
